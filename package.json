{
  "name": "alpha",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "typecheck": "turbo build -- --noEmit",
    "train": "node --expose-gc apps/cli/dist/main.js train",
    "train:dev": "npx tsx apps/cli/src/main.ts train",
    "sample": "node apps/cli/dist/main.js sample",
    "eval": "node apps/cli/dist/main.js eval",
    "bench": "node apps/cli/dist/main.js bench",
    "datagen": "node apps/cli/dist/main.js datagen",
    "chatgen": "node packages/historic-chat-gen/dist/main.js",
    "tokenizer:build": "node apps/cli/dist/main.js tokenizer build",
    "train:abc": "scripts/train-abc.sh",
    "train:chords": "scripts/train-chords.sh",
    "train:concordance": "scripts/train-concordance.sh",
    "train:gcp": "python scripts/gcp_train.py",
    "upload": "npx tsx scripts/upload-railway.ts",
    "demo": "npx tsx scripts/demo.ts",
    "server": "npm run dev -w @alpha/web",
    "web": "npm run dev -w @alpha/web",
    "tui": "npm run dev -w @alpha/tui"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=20"
  }
}
